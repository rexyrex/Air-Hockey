<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    
    

    <screen id="start" controller="mygame.Menu">
        <layer id="layer" backgroundColor="#003f" childLayout="vertical">
            <panel id="panel" height="100%" width="100%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                <image filename="Materials/main.jpg" width="100%" height="100%"></image>
                <text text="" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true" color ="#00f8" fontsize="40"></text>
            
            <panel id="panel2" height="20%" width="100%" align="center" valign="center" backgroundColor="#0000" childLayout="center" visibleToMouse="true">
                
                <control name="button" label="Press Any Button" id="startGame" align="center" valign="center" visibleToMouse="true">
                    <interact onClick="startGame()"></interact>
                </control>
            </panel>
            
            
            </panel>
            
            
            
        </layer>
    </screen>
</nifty>
